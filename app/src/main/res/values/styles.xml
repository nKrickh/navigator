<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="label_base" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#2b281f</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">0.3</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="textDisplay_base" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="layout_constraintWidth_default">percent</item>
        <item name="layout_constraintWidth_percent">0.7</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="add_fab">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">30dp</item>
        <item name="srcCompat">@drawable/baseline_add_box_24</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="play_fab">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="fabSize">normal</item>
        <item name="maxImageSize">30dp</item>
        <item name="srcCompat">@drawable/baseline_play_circle_outline_24</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>